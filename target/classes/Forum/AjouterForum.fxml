<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="form_container" stylesheets="@../cssPartenaire/afficher.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ServiceApresVente.AjouterForum">
    <children>
        <Label layoutX="200.0" layoutY="34.0" prefHeight="35.0" prefWidth="200.0" styleClass="title" text="AJOUTER FORUM">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="18.0" />
            </font>
        </Label>
        <TextField fx:id="titleEntry" layoutX="200.0" layoutY="100.0" prefWidth="200.0" promptText="Title" styleClass="textfield-design" />
        <TextArea fx:id="contentEntry" layoutX="200.0" layoutY="150.0" prefHeight="70.0" prefWidth="200.0" promptText="Content" styleClass="textfield-design" />
        <TextField fx:id="usernameEntry" layoutX="200.0" layoutY="230.0" prefWidth="200.0" promptText="Username" styleClass="textfield-design" />
        <TextField fx:id="prixEntry" layoutX="200.0" layoutY="280.0" prefWidth="200.0" promptText="Price" styleClass="textfield-design" />
        <Button fx:id="btnAddForum" layoutX="250.0" layoutY="365.0" mnemonicParsing="false" onAction="#addForum" prefHeight="34.0" prefWidth="100.0" styleClass="button" text="Ajouter">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="15.0" />
            </font>
        </Button>
        <Label fx:id="titleError" layoutX="410.0" layoutY="100.0" prefHeight="30.0" prefWidth="150.0" styleClass="error-label" />
        <Label fx:id="contentError" layoutX="410.0" layoutY="150.0" prefHeight="30.0" prefWidth="150.0" styleClass="error-label" />
        <Label fx:id="usernameError" layoutX="410.0" layoutY="230.0" prefHeight="30.0" prefWidth="150.0" styleClass="error-label" />
        <Label fx:id="prixError" layoutX="410.0" layoutY="280.0" prefHeight="30.0" prefWidth="150.0" styleClass="error-label" />
        <Label fx:id="addMessage" layoutX="200.0" layoutY="315.0" prefHeight="50.0" prefWidth="217.0" />
        <Button fx:id="goBack" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#goBack" styleClass="button" text="&lt;">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
    </children>
</AnchorPane>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ForumController.UpdateForum">
    <children>
        <Pane layoutX="35.0" layoutY="2.0" prefHeight="368.0" prefWidth="530.0" style="-fx-background-color: #FB7D5B;">
            <children>
                <VBox alignment="TOP_CENTER" layoutX="18.0" layoutY="56.0" prefHeight="307.0" prefWidth="321.0" spacing="20.0">
                    <children>
                        <HBox alignment="TOP_CENTER" prefHeight="38.0" prefWidth="331.0" spacing="15.0">
                            <children>
                                <TextField fx:id="titleField" prefHeight="38.0" prefWidth="234.0" promptText="Title" />
                                <TextField fx:id="usernameField" prefHeight="38.0" prefWidth="156.0" promptText="Username" />
                            </children>
                        </HBox>
                        <TextArea fx:id="contentArea" prefHeight="100.0" prefWidth="300.0" promptText="Content" />
                        <TextField fx:id="prixField" prefHeight="38.0" prefWidth="234.0" promptText="Price" />
                        <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="244.0" prefHeight="38.0" prefWidth="331.0" spacing="15.0">
                            <children>
                                <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateForum" prefHeight="40.0" prefWidth="113.0" style="-fx-background-color: white;" text="Update" textFill="#fb7d5b" />

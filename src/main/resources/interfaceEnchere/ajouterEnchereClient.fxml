<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.controllerGestionEnchere.ajouterEnchereClientController" stylesheets="@../interfaceEnchere/Styles.css" >
    <children>
        <Label layoutX="40.0" layoutY="40.0" text="Date de début:" />
        <DatePicker fx:id="dateDebutPicker" layoutX="150.0" layoutY="40.0" promptText="Date de début" />

        <Label layoutX="40.0" layoutY="80.0" text="Date de fin:" />
        <DatePicker fx:id="dateFinPicker" layoutX="150.0" layoutY="80.0" promptText="Date de fin" />

        <Label layoutX="40.0" layoutY="120.0" text="Prix Minimum:" />
        <TextField fx:id="prixMinField" layoutX="150.0" layoutY="120.0" promptText="Prix Minimum" />

        <Label layoutX="40.0" layoutY="160.0" text="Nombre de participants:" />
        <TextField fx:id="nbrParticipantsField" layoutX="200.0" layoutY="160.0" promptText="Nombre de participants" />

        <Button layoutX="40.0" layoutY="200.0" text="Ajouter" onAction="#ajouterAction" />
    </children>
</AnchorPane>
